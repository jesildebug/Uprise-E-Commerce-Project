<%-include('.. /admin/layout/admin-header-layout.ejs') -%>


  <!-- Table Start -->
  <div class="container-fluid pt-4 px-4" style="min-height: 100vh;">
    <div class="row g-4">
      <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">

          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Banner Name</th>
                  <th scope="col">Description</th>
                  <th scope="col">Image</th>

                </tr>
              </thead>
              <tbody>
                <% banners.forEach(function(banner){ %>
                  <tr>
                    <td scope="row">
                      <%= index++ %>
                    </td>

                    <td>
                      <%= banner?.bannerName%>
                    </td>
                    <td>
                      <%= banner?.description %>
                    </td>

                    <td><img src="/images/product_img/<%= banner?.image[0] %>" style="width: 100px" alt=""></td>
                    <td>

                      <% if (banner.status=="List" ) { %>
                        <form action="/admin/unlistBanner/<%= banner._id %>" method="post">
                          <button type="submit" class="btn btn-danger"> Unlist</button>
                        </form>
                        <% } else { %>
                          <form action="/admin/listBanner/<%= banner._id %>" method="post">
                            <button type="submit" class="btn btn-success">List</button>
                          </form>
                          <% } %>

                    </td>
                  </tr>
                  <% }) %>
                    <section class="d-flex justify-content-end mt-2">

                      <% if(hasPreviousPage){ %>
                        <a style="text-decoration: none;padding: .5rem; margin:0 1rem; color:rgb(253, 249, 249)"
                          class="text-center" href="/admin/bannerview?page=<%= PreviousPage %>"><i
                            class="fa fa-chevron-left" aria-hidden="true"></i></a>
                        <% } %>

                          <a style="text-decoration: none;   padding: .5rem; margin:0 1rem; color:  rgb(253, 249, 249); border: 1px solid whitesmoke;"
                            href="/admin/bannerview?page=<%= page %>">
                            <%= page %>
                          </a>
                          <% if(hasNextPage) { %>
                            <a style="text-decoration: none;padding: .5rem; margin:0 1rem; color:rgb(253, 249, 249);"
                              href="/admin/bannerview?page=<%=  page+1 %>"><i class="fa fa-chevron-right"
                                aria-hidden="true"></i></a>
                            <% } %>
                    </section>
              </tbody>

            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%-include('.. /admin/layout/admin-footer-layout.ejs') -%>