            <!-- Recent Sales Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-secondary text-center rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h6 class="mb-0">New Users</h6>
                        <a href="/admin/alluser">Show All</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table text-start align-middle table-bordered table-hover mb-0">
                            <thead>
                                <tr class="text-white">
                                    <th scope="col">#</th>
                                    <th scope="col">Full Name</th>
                                    <th scope="col">User Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Phone</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                <% user.forEach(function(x){ %>

                                    <tr>
                                        <th scope="row">
                                            <%= index++ %>
                                        </th>
                                        <td>
                                            <%= x.FullName %>
                                        </td>
                                        <td>
                                            <%= x.UserName %>

                                        </td>
                                        <td>
                                            <%= x.Email %>
                                        </td>
                                        <td>
                                            <%= x.Phone %>
                                        </td>
                                    </tr>
                                <% }) %>
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="container-fluid pt-4 px-4">
                <div class="bg-secondary text-center rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h6 class="mb-0">New Orders</h6>
                        <a href="/admin/manageOrder">Show All</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table text-start align-middle table-bordered table-hover mb-0">
                            <thead>
                                <tr class="text-white">
                                    <th scope="col">#</th>
                                    <th scope="col">Products</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Purchased Date</th>
                                    <th scope="col">Delivery Date</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                <% order.forEach(function(order) { %>

                                    <% order.products.forEach(function(product) { %>

                                    <tr>
                                        <th scope="row">
                                            <%= orderindex++ %>
                                        </th>
                                        <td class="align-middle">
                                            <span class="text-white text-xs font-weight-bold">
                                              <%= product?.productId?.brand.brand%>
                                                <%= product?.productId?.model%>
                                            </span>
                                          </td>
                                          <td class="align-middle">
                                          <span class="text-white text-xs font-weight-bold">
                                            <%= product?.quantity %>
                                          </span>
                                          <td class="align-middle">
                                            <span class="text-white text-xs font-weight-bold">
                                              <%= product?.total %>
                                            </span>
                                          </td>
                                       
                                          
                                          <td class="align-middle">
                                            <span class="text-white text-xs font-weight-bold">
                                              <%= moment(product?.date).format('LLL') %>
                                            </span>
                                          </td>
                                          <td class="align-middle">
                                            <span class="text-white text-xs font-weight-bold">
                                              <%= moment(product?.deliveryDate).format('LLL') %>
                                            </span>
                                          </td>


                    
                    
                                    </tr>
                                <% }) %>
                                <% }) %>
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

           

           
            <!-- Recent Sales End -->


          

         

            <%-include('../admin/layout/admin-footer-layout.ejs') -%>