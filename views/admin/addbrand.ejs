<%-include('../admin/layout/admin-header-layout.ejs') -%>


  <div class="container-fluid pt-4 px-4">
    <div class="bg-secondary rounded h-100 p-4">
      <h6 class="mb-4">iPro</h6>
      <form action="/admin/addbrand" method="post">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Brand</label>
          <input type="text" class="form-control" name="brand" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <button type="submit" class="btn btn-primary">Add New</button>
      </form>
    </div>
  </div>

  <div class="container-fluid pt-4 px-4">

    <div class="bg-secondary rounded h-100 p-4" style="min-height: 100vh;">
      <!-- <h6 class="mb-4">Responsive Table</h6> -->

      <div class="table-responsive">
        <table class="table">

          <thead>


            <tr>
              <th scope="col">#</th>
              <th scope="col">First Name</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% brand.forEach(function(x) { %>

              <tr>
                <td scope="row">
                  <%= index++ %>
                </td>
                <td>
                  <%= x.brand %>
                </td>
                <td>
                  <form action="/admin/deletebrand/<%= x._id %>" method="post">
                    <button type="submit" class="btn btn-danger" . style="
                  width: 100px;" onclick="return confirm ('Are you sure want to delete ?')"><i
                        class="bi bi-trash-fill"></i>

                    </button>
                  </form>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>



  <%-include('../admin/layout/admin-footer-layout.ejs') -%>