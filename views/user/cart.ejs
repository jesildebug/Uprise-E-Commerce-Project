    <!-- Header Info Begin -->
    <div class="header-info">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                    <div class="header-item">
                        <img src="img/icons/delivery.png" alt="">
                        <p>Free shipping on orders over $30 in USA</p>
                    </div>
                </div>
                <div class="col-md-4 text-left text-lg-center">
                    <div class="header-item">
                        <img src="img/icons/voucher.png" alt="">
                        <p>20% Diwaali sale</p>
                    </div>
                </div>
                <div class="col-md-4 text-left text-xl-right">
                    <div class="header-item">
                    <img src="img/icons/sales.png" alt="">
                    <p>30% off on Oppo. Use code: 30OFF</p>
                </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Header Info End -->
    <!-- Header End -->

    <!-- Page Add Section Begin -->
    <section class="page-add cart-page-add">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="page-breadcrumb">
                        <h2>Cart<span>.</span></h2>
                        <!-- <a href="#">Home</a>
                        <a href="#">Dresses</a>
                        <a class="active" href="#">Night Dresses</a> -->
                    </div>
                </div>
               
            </div>
        </div>
    </section>
    <!-- Page Add Section End -->

    <!-- Cart Page Section Begin -->
    <div class="cart-page">
        <div class="container">
            <div class="cart-table">
                <table>
                    <thead>
                        <tr>
                            <th class="product-h">Product</th>
                            <th>Price</th>
                            <th class="quan">Quantity</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <% cartProducts.forEach((data) => { %>

                                <td class="product-col">
                                    <img src="/images/product_img/<%= data.productId.image[0] %>" alt="">
                                    <div class="p-title">
                                        <h5><%= data.productId.model  %>
                                        </h5>
                                    </div>
                                </td>
                                <td class="price-col">₹<%= data.productId.price %></td>
                                <td>
                             <div class="qty-label">
                                <div class="input-number">  
                                        Qty:
                                        <a class="qty-up" href="user/button-increment/<%=data.productId._id %>"
                                            onclick="addToCart('<%=data.productId.id%>','<%=data.productId.model%>','<%=data.productId.price %>',1)">+</a>
                                                        <input id="itemQty-<%= data.productId.id %>" type="text"
                                                            value="<%= data.quantity %>"
                                                            style="height: 40px; width: 30px; border: none;">
                                                        <a class="qty-down" href="user/button-decrement/<%= data.productId._id %>"
                                                            onclick="addToCart('<%=data.productId.id%>','<%=data.productId.model%>','<%=data.productId.price %>',-1)">-</a>
                                 </div>
                             </div>
                             </td>
                              <td class="total">₹<%= data.total %> </td>
                                <!-- <td class="product-close">x</td> -->
                                <td class="text-center align-middle px-0"><a href="user/deleteCart/<%= data.productId._id %>" class="shop-tooltip close float-none text-danger" title="" data-original-title="Remove">×</a></td>

                        </tr>
                        
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <div class="cart-btn">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="coupon-input">
                            <input type="text" placeholder="Enter cupone code">
                        </div>
                    </div>
                    <div class="col-lg-5 offset-lg-1 text-left text-lg-right">
                        <div class="site-btn clear-btn">Clear Cart</div>
                        <div class="site-btn update-btn">Update Cart</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="shopping-method">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="total-info">
                            <div class="row">
                                <div class="col-lg-12 text-right">
                                    <div class="col-lg-4">
                                        <div class="cart__total">
                                            <h6>Cart total</h6>
                                            <td>
                                                <h6>Subtotal <span>₹ <%= cartTotal %> </span></h6>
                                                <h6>Discount <span class="text-success">₹ 500 </span></h6>
                                                <hr>
                                                <h6>Total <span>₹ <%= cartTotal - 500 %> </span></h6>
                                                <hr>
                                            </td>
                                               
                                    <a href="/checkout" class="primary-btn chechout-btn">Proceed to checkout</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Cart Page Section End -->

     




  

